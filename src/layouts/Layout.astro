---
// Layout.astro - Main layout component demonstrating props and slots
import { ViewTransitions } from 'astro:transitions';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "A modern Astro blog to learn components, SSR, SSG and more!" } = Astro.props;

// Get current page path for active navigation styling
const currentPath = Astro.url.pathname;

// Import the global styles
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
    <style>
      /* Custom page transition animations */
      html.astro-transition * {
        transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
      }
      
      /* Smooth fade transition for page changes */
      ::view-transition-old(root),
      ::view-transition-new(root) {
        animation-duration: 0.3s;
      }
      
      ::view-transition-old(root) {
        animation-name: fade-out;
      }
      
      ::view-transition-new(root) {
        animation-name: fade-in;
      }
      
      @keyframes fade-out {
        to {
          opacity: 0;
        }
      }
      
      @keyframes fade-in {
        from {
          opacity: 0;
        }
      }
    </style>
  </head>
  <body>
    <!-- Navigation Component -->
    <nav class="bg-white shadow-lg sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <a href="/" class="text-2xl font-bold text-indigo-600 hover:text-indigo-800 transition-colors">
              ðŸš€ Astro Blog
            </a>
          </div>
          <div class="flex items-center space-x-8">
            <a 
              href="/" 
              class={`text-gray-700 hover:text-indigo-600 transition-colors font-medium ${
                currentPath === '/' ? 'text-purple-600 underline font-semibold' : ''
              }`}
              data-astro-prefetch="hover"
            >
              Home
            </a>
            <a 
              href="/about" 
              class={`text-gray-700 hover:text-indigo-600 transition-colors font-medium ${
                currentPath === '/about' ? 'text-purple-600 underline font-semibold' : ''
              }`}
              data-astro-prefetch="hover"
            >
              About
            </a>
            <a 
              href="/faq" 
              class={`text-gray-700 hover:text-indigo-600 transition-colors font-medium ${
                currentPath === '/faq' ? 'text-purple-600 underline font-semibold' : ''
              }`}
              data-astro-prefetch="hover"
            >
              FAQ
            </a>
            <a 
              href="/blog" 
              class={`text-gray-700 hover:text-indigo-600 transition-colors font-medium ${
                currentPath.startsWith('/blog') ? 'text-purple-600 underline font-semibold' : ''
              }`}
              data-astro-prefetch="hover"
            >
              Blog
            </a>
            <a 
              href="/contact" 
              class={`bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-4 py-2 rounded-lg font-medium transition-all duration-300 transform hover:shadow-lg hover:scale-105 hover:-translate-y-1 ${
                currentPath === '/contact' ? 'shadow-lg scale-105' : ''
              }`}
              data-astro-prefetch="hover"
            >
              Contact
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-1">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-12 mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-lg font-semibold mb-4">ðŸš€ Astro Blog</h3>
            <p class="text-gray-300">Learning Astro through hands-on development with components, SSR, SSG, and modern web practices.</p>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-4">Learn</h3>
            <ul class="space-y-2 text-gray-300">
              <li><a href="/blog" class="hover:text-white transition-colors" data-astro-prefetch="hover">Blog Posts</a></li>
              <li><a href="/about" class="hover:text-white transition-colors" data-astro-prefetch="hover">About Astro</a></li>
              <li><a href="https://docs.astro.build" class="hover:text-white transition-colors" target="_blank">Documentation</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-4">Connect</h3>
            <ul class="space-y-2 text-gray-300">
              <li><a href="https://github.com/withastro/astro" class="hover:text-white transition-colors" target="_blank">GitHub</a></li>
              <li><a href="https://astro.build/chat" class="hover:text-white transition-colors" target="_blank">Discord</a></li>
              <li><a href="https://twitter.com/astrodotbuild" class="hover:text-white transition-colors" target="_blank">Twitter</a></li>
            </ul>
          </div>
        </div>
        <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400">
          <p>&copy; 2025 Astro Learning Blog. Built with Astro and Tailwind CSS.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
